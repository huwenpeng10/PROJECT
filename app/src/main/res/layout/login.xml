<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/user_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="@string/login_text_name"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/user_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/login_text_pwd"
        android:layout_below="@+id/user_name_text"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:onClick="login"
        android:id="@+id/login_btn"
        android:layout_below="@+id/user_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_btn_register"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>